<%- include("partials/header.ejs") %>

<div class="dashboard">
    <div class="container-dashboard">
        <form action="/exchange" method="post">
            <div class="exchange-container">
                <div class="coin-container">
                    <label for="amount">Enter amount</label>
                    <input type="text" class="coin" name="amount" id="amount">
                    <div class="custom-select" id="custom-select">
                        <p class="d-inline-block">Select coin</p>
                        <div class="custom-select-trigger d-inline-block" id="custom-select-trigger">
                            Select coin
                        </div>
                        <ul class="custom-options">
                            <% coins.forEach(coin => { %>
                                <li value="<%= `${coin.id}` %>"><img src="<%= `${coin.image}` %>" alt=""> <p class="d-inline-block"><%= coin.name %></p> <p class="symbol d-inline-block"> (<%= coin.symbol %>) </p></li>
                            <% }); %>
                        </ul>
                    </div>
                    <br>
                </div>
                <div class="exchange">
                    <div class="custom-select" id="custom-select">
                        <p class="d-inline-block">Select currency</p>
                        <div class="custom-select-trigger d-inline-block" id="custom-select-trigger">
                            Select currency
                        </div>
                        <ul class="custom-options">
                            <% for (let rateKey in rates.rates) { %>
                                <li value="<%= rates.rates[rateKey].unit %>"><p class="d-inline-block"><%= rates.rates[rateKey].name %></p><p class="d-inline-block">(<%= rates.rates[rateKey].unit %>)</p></li>
                            <% } %>
                        </ul>
                    </div>
                </div>
                <div class="exchange-result">
                    <img src="" alt=""><p></p>
                </div>
            </div>
        </form>
        <div class="chart-container">
            <div class="chart"></div>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
<script src="js/script.js"></script>

